<?xml version="1.0" encoding="UTF-8"?>
<Patch>

  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/BiomeDef[not(extraGenSteps)]</xpath>
    <match Class="PatchOperationAdd">
      <xpath>/Defs/BiomeDef[not(extraGenSteps)]</xpath>
      <value>
        <extraGenSteps />
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/BiomeDef/extraGenSteps</xpath>
    <value>
      <li>MF_GenStep_Rocks</li>
      <li>MF_GenStep_Ice</li>
    </value>
  </Operation>

</Patch>
