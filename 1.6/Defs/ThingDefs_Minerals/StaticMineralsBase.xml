<Defs>

  <ThingDef Name="MF_CrystalBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <fillPercent>0.1</fillPercent>
    <pathCost>40</pathCost>
    <graphicData>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <selectable>true</selectable>
    <!-- Roof requirements -->
    <mustBeUnderRoof>true</mustBeUnderRoof>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>crystal</li>
    </tags>
    <!-- If graphic overlapping with nearby wall textures are rotated -->
    <growsUpWalls>true</growsUpWalls>
  </ThingDef>


  <ThingDef Name="MF_EmbeddedMineralBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <altitudeLayer>Floor</altitudeLayer>
    <fillPercent>0.01</fillPercent>
    <pathCost>1</pathCost>
    <graphicData>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
    </statBases>
    <!-- The size range -->
    <visualSizeRange>
      <min>0.2</min>
      <max>0.35</max>
    </visualSizeRange>
    <visualClustering>0.3</visualClustering>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>8</maxMeshCount>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualSpread>1.2</visualSpread>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSizeVariation>0.1</visualSizeVariation>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>crystal</li>
      <li>NoticeMineral_Event</li>
    </tags>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>0.6</hiddenInSnowThreshold>
  </ThingDef>


