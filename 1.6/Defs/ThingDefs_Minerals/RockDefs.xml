<?xml version="1.0" encoding="UTF-8"?>
<Defs>


  <ThingDef Name="MF_ImpassableRockBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <rotatable>true</rotatable>
    <saveCompressible>true</saveCompressible>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <blockWind>true</blockWind>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>1</maxMeshCount>
    <!-- The range of starting sizes of individuals in clusters -->
    <initialSizeMin>1</initialSizeMin>
    <initialSizeMax>0.95</initialSizeMax>
    <!-- If true, growth rate and initial size depends on distance from needed terrains -->
    <neededNearbyTerrainSizeEffect>false</neededNearbyTerrainSizeEffect>
    <!-- The size range -->
    <visualSizeRange>
      <min>1.75</min>
      <max>1.9</max>
    </visualSizeRange>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualClustering>1.0</visualClustering>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSpread>0.5</visualSpread>
    <visualSizeVariation>0.08</visualSizeVariation>
    <!-- How much to change the vertical position of the texture. Positive is up -->
    <verticalOffset>0.2</verticalOffset>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>wall</li>
    </tags>
  </ThingDef>


  <ThingDef Name="MF_HewnRockBase" ParentName="MF_ImpassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <graphicData>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
        <li>MapEdge</li>
      </linkFlags>
      <damageData>
        <cornerTL>Damage/Corner</cornerTL>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBL>Damage/Corner</cornerBL>
        <cornerBR>Damage/Corner</cornerBR>
        <edgeTop>Damage/Edge</edgeTop>
        <edgeBot>Damage/Edge</edgeBot>
        <edgeLeft>Damage/Edge</edgeLeft>
        <edgeRight>Damage/Edge</edgeRight>
      </damageData>
    </graphicData>
    <!-- The probability that this mineral type will be spawned at all on a given map -->
    <perMapProbability>0</perMapProbability>
    <!-- The range of starting sizes of individuals in clusters -->
    <initialSizeMin>1</initialSizeMin>
    <initialSizeMax>1</initialSizeMax>
    <!-- Roof requirements -->
    <mustBeUnderThickRoof>true</mustBeUnderThickRoof>
    <mustBeNotNearPassable>true</mustBeNotNearPassable>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>40</newMapSpawnOrder>
    <!-- How easy it is to mine -->
    <mineSpeedFactor>0.8</mineSpeedFactor>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>hewn</li>
    </tags>
  </ThingDef>


  <ThingDef Name="MF_SolidRockBase" ParentName="MF_ImpassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <building>
      <mineablePreventMeteorite>false</mineablePreventMeteorite>
    </building>
    <!-- The probability that this mineral type will be spawned at all on a given map -->
    <perMapProbability>0</perMapProbability>
    <!-- Roof requirements -->
    <mustBeUnderRoof>true</mustBeUnderRoof>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>50</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>1</snowTextureThreshold>
    <!-- How easy it is to mine -->
    <mineSpeedFactor>1.0</mineSpeedFactor>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>solid</li>
    </tags>
  </ThingDef>


  <ThingDef Name="MF_WeatheredRockBase" ParentName="MF_ImpassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <!-- Roof requirements -->
    <mustBeUnroofed>true</mustBeUnroofed>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>60</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.85</snowTextureThreshold>
    <!--For a given map, the minimum/maximum probablility a cluster will spawn for every possible location -->
    <minClusterProbability>0.01</minClusterProbability>
    <maxClusterProbability>0.02</maxClusterProbability>
    <!-- How  many squares each cluster will be -->
    <minClusterSize>1</minClusterSize>
    <maxClusterSize>5</maxClusterSize>
    <!-- How much initial sizes of individuals randomly vary -->
    <initialSizeVariation>.3</initialSizeVariation>
    <!-- How easy it is to mine -->
    <mineSpeedFactor>1.2</mineSpeedFactor>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>weathered</li>
    </tags>
  </ThingDef>


  <ThingDef Name="MF_BoulderRockBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <altitudeLayer>LowPlant</altitudeLayer>
    <fillPercent>0.6</fillPercent>
    <passability>PassThroughOnly</passability>
    <blockWind>true</blockWind>
    <pathCost>100</pathCost>
    <!-- If smaller than 1, it looks smaller in water -->
    <submergedSize>1</submergedSize>
    <submergedRadius>1</submergedRadius>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.8</snowTextureThreshold>
    <!-- If textures overlapping walls above them should be printed on top -->
    <printOverWalls>true</printOverWalls>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>70</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.7</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>1.1</hiddenInSnowThreshold>
    <!--For a given map, the minimum/maximum probablility a cluster will spawn for every possible location -->
    <minClusterProbability>0.005</minClusterProbability>
    <maxClusterProbability>0.01</maxClusterProbability>
    <!-- How  many squares each cluster will be -->
    <minClusterSize>1</minClusterSize>
    <maxClusterSize>4</maxClusterSize>
    <!-- The range of starting sizes of individuals in clusters -->
    <initialSizeMin>.8</initialSizeMin>
    <initialSizeMax>1.0</initialSizeMax>
    <!-- How much initial sizes of individuals randomly vary -->
    <initialSizeVariation>.5</initialSizeVariation>
    <!-- how far away it can be from needed nearby terrains-->
    <neededNearbyTerrainRadius>12</neededNearbyTerrainRadius>
    <!-- If true, growth rate and initial size depends on distance from needed terrains -->
    <neededNearbyTerrainSizeEffect>true</neededNearbyTerrainSizeEffect>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>1</maxMeshCount>
    <!-- The size range -->
    <visualSizeRange>
      <min>1.1</min>
      <max>1.3</max>
    </visualSizeRange>
    <visualClustering>0.2</visualClustering>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualSpread>0.7</visualSpread>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSizeVariation>0.1</visualSizeVariation>
    <!-- How easy it is to mine -->
    <mineSpeedFactor>1.4</mineSpeedFactor>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>boulder</li>
      <li>chunk_replacer</li>
    </tags>
  </ThingDef>


  <ThingDef Name="MF_SmallRockBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <graphicData>
      <damageData>
        <enabled>false</enabled>
      </damageData>
    </graphicData>
    <altitudeLayer>SmallWire</altitudeLayer>
    <fillPercent>0.2</fillPercent>
    <pathCost>20</pathCost>
    <!-- If smaller than 1, it looks smaller in water -->
    <submergedSize>0</submergedSize>
    <submergedRadius>1</submergedRadius>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>80</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.6</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>0.85</hiddenInSnowThreshold>
    <!--For a given map, the minimum/maximum probablility a cluster will spawn for every possible location -->
    <minClusterProbability>0.02</minClusterProbability>
    <maxClusterProbability>0.05</maxClusterProbability>
    <!-- How  many squares each cluster will be -->
    <minClusterSize>1</minClusterSize>
    <maxClusterSize>6</maxClusterSize>
    <!-- The range of starting sizes of individuals in clusters -->
    <initialSizeMin>0.7</initialSizeMin>
    <initialSizeMax>1.0</initialSizeMax>
    <!-- How much initial sizes of individuals randomly vary -->
    <initialSizeVariation>.2</initialSizeVariation>
    <!-- how far away it can be from needed nearby terrains-->
    <neededNearbyTerrainRadius>4</neededNearbyTerrainRadius>
    <!-- If true, growth rate and initial size depends on distance from needed terrains -->
    <neededNearbyTerrainSizeEffect>true</neededNearbyTerrainSizeEffect>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>4</maxMeshCount>
    <!-- The size range -->
    <visualSizeRange>
      <min>0.5</min>
      <max>0.7</max>
    </visualSizeRange>
    <visualClustering>0.3</visualClustering>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualSpread>1.2</visualSpread>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSizeVariation>0.3</visualSizeVariation>
    <!-- How easy it is to mine -->
    <mineSpeedFactor>1.6</mineSpeedFactor>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>small_rock</li>
    </tags>
  </ThingDef>


</Defs>
